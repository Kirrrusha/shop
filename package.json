{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.4.1"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.9.0",
    "@types/node": "^12.12.25",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.1",
    "axios": "^0.19.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "formik": "^1.5.8",
    "history": "^4.10.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "node-sass": "^4.12.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "typescript": "^3.7.5",
    "yup": "^0.27.0",
    "redux-saga": "^1.0.5",
    "redux-saga-test-plan": "^4.0.0-rc.1",
    "react-redux": "^7.1.0",
    "redux-saga-thunk": "^0.7.3",
    "cross-env": "^5.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "cross-env NODE_ENV=test react-scripts test --env=jsdom --watchAll=false --verbose --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "eject": "react-scripts eject",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "lint-fix": "tslint --project tsconfig.json --fix --format verbose"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "tslint": "^5.20.1",
    "husky": "^4.0.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "<rootDir>/src/**/*.tsx",
      "!<rootDir>/src/**/types.ts",
      "!<rootDir>/src/**/*.d.ts",
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/serviceWorker.ts",
      "!<rootDir>/src/redux/api/*",
      "!<rootDir>/src/components/Notifier/*"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-dnd|utk-components|react-dates|@devexpress|dnd-core|react-dnd-html5-backend|react-sortable-tree|bootstrap|react-big-calendar)/)"
    ]
  }
}
